@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap')

*
  margin 0
  padding 0
  border 0

body
  font-family 'Montserrat', sans-serif
  color #330A0B
  background-color #FB3238

header
  color #FFFFFF
  background-color #000000
  padding 1rem

.content
  height calc(100vh - 71px)
  width 100vw

aside
  float left
  background-color #BE2221
  box-sizing border-box
  width 200px
  padding 0 1rem 1rem
  overflow auto
  height 100%

aside::-webkit-scrollbar, main::-webkit-scrollbar
  display none

.season-title
  padding 1rem .75rem .5rem

.episode-wrapper
  display flex
  flex-direction column
  list-style none

.episode-item
  padding .75rem
  cursor pointer
  &:hover
    color #BE2221
    background-color #330A0B

.season-button
  text-align left
  width 100%
  font-family 'Montserrat', sans-serif
  color #330A0B
  background none
  padding 1rem
  font-size 1rem
  cursor pointer
  &:hover
    color #BE2221
    background-color #330A0B

main
  width calc(100vw - 200px)
  max-height 100%
  display flex
  justify-content space-around
  flex-wrap wrap
  overflow auto

.content__header
  margin 1rem
  padding 1rem
  display flex
  width 100%
  background-color #BE2221

.content__header__img
  width 190px
  height 185px

.content__header__img img
  width 100%
  height 100%
  object-position center center
  object-fit cover
  margin 0

.content__header__text
  display flex
  flex-direction column
  justify-content center
  padding 1rem

.content__header__title
  font-size 2rem

.content__header__subtitle
  color #422626
  font-size 1rem

.character
  background-color #BE2221
  width 500px
  height 185px
  display flex
  overflow hidden
  margin .75rem
  padding .75rem

.character__img
  width 100%
  flex 2 1 0

.character__img img
  width 100%
  height 100%
  object-position center center
  object-fit cover
  margin 0

.character__content
  display flex
  flex-direction column
  justify-content space-between
  flex 3 1 0
  padding 0 0.75rem

.character__section
  display flex
  flex-direction column

.character__section a
  color #330a0b
  text-decoration none
  cursor pointer
  &:hover
    color #FFFFFF

.character__name
  font-size 1.5rem
  margin-bottom .25rem

.character__status
  font-size 1rem

.character__text
  color #422626
  font-size .75rem

.character__location
  font-size 1rem

.episode
  background-color #BE2221
  width 500px
  display flex
  flex-direction column
  overflow hidden
  margin: .75rem
  padding .75rem
  cursor pointer
  &:hover
    color #BE2221
    background-color #330A0B

.episode__name
  font-size 1.5rem

.episode__subtitle
  font-size 1rem
  color #422626